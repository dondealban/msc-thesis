	file = {van der Sanden & Hoekman_1999_Remote Sens Environ.pdf:/Users/dondealban/Filing Cabinet/Journals/Remote Sens Environ/van der Sanden & Hoekman_1999_Remote Sens Environ.pdf:application/pdf}
